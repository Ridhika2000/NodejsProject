<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Result Management System</title>
    <%- include('./partials/imports') -%>
    <style>
        body {
            background-color: #f5f5f5;
            font-family: 'Arial', sans-serif; 
        }

        .container-fluid {
            margin-top: 20px; 
        }

        .form-control {
            border-radius: 8px;
        }

        .row.form-group {
            margin-bottom: 15px;
        }

        .btn-back {
            background-color: #008CFF;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            text-decoration: none; 
        }

        .btn-back:hover {
            background-color: #007BDC; 
        }

        .label-heading {
            font-weight: bold;
            font-size: 1.2rem;
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <% const student= { 'rollNo':1, 'name':'Ridhika Garg', 'dob':'07/08/2000', 'score':98 }%>
    <%- include('./partials/header') -%>
    <div class="container-fluid">
        <div class="row py-2">
            <div class="col">
                <a href="/search" class="fw-semibold btn-back">Back</a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-6 m-auto">
                <form class="p-2">
                    <div class="row text-center">
                        <label class="fw-bold fs-5 pe-5 label-heading">Result</label>
                    </div>
                    <!-- Roll No. Input -->
                    <div class="row form-group py-2">
                        <div class="col-md-3">
                            <label for="rollNo" class="fs-6 p-1">Roll No.:</label>
                        </div>
                        <div class="col-md-6">
                            <input class="form-control" type="text" name="rollNo" placeholder="Enter Roll No." value="<%=data?.rollNo %>" disabled />
                        </div>
                    </div>
                    <!-- Name Input -->
                    <div class="row form-group py-2">
                        <div class="col-md-3">
                            <label for="name" class="fs-6 p-1">Name:</label>
                        </div>
                        <div class="col-md-6">
                            <input class="form-control" type="text" name="name" placeholder="Enter Name" value="<%=data?.studentName %>" disabled />
                        </div>
                    </div>
                    <!-- Date of Birth Input -->
                    <div class="row form-group py-2">
                        <div class="col-md-3">
                            <label for="date" class="fs-6 p-1">Date of Birth:</label>
                        </div>
                        <div class="col-md-6">
                            <input class="form-control" type="date" name="date" value="<%=data?.dob.slice(0,10) %>" disabled />
                        </div>
                    </div>
                    <!-- Score Input -->
                    <div class="row form-group py-2">
                        <div class="col-md-3">
                            <label for="score" class="fs-6 p-1">Score:</label>
                        </div>
                        <div class="col-md-6">
                            <input class="form-control" type="number" name="score" value="<%= data?.score %>" placeholder="Enter Score" disabled />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
